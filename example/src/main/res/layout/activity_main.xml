<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/activity_vertical_margin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnMinus0"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:onClick="minusAdd10"
            android:text="+10"
            android:textSize="14sp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnMinus1"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:onClick="minusAdd1"
            android:text="+1"
            android:textSize="14sp" />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/etMinus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:inputType="number"
            android:textColor="@color/colorAccent"
            tools:text="45" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnMinus2"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:onClick="minusRemove1"
            android:text="-1"
            android:textSize="14sp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnMinus3"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:onClick="minusRemove10"
            android:text="-10"
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="分" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnSeconds0"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:onClick="secondsAdd10"
            android:text="+10"
            android:textSize="14sp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnSeconds1"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:onClick="secondsAdd1"
            android:text="+1"
            android:textSize="14sp" />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/etSeconds"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:inputType="number"
            android:textColor="@color/colorAccent"
            tools:text="00" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnSeconds2"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:onClick="secondsRemove1"
            android:text="-1"
            android:textSize="14sp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnSeconds3"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:onClick="secondsRemove10"
            android:text="-10"
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="秒" />
    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="clickResetStart"
        android:text="时间初始化" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="clickList"
        android:text="流沙遗迹" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="clickAirport"
        android:text="激战空港" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/tv_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorAccent"
            android:textSize="30sp" />
    </LinearLayout>
</LinearLayout>
